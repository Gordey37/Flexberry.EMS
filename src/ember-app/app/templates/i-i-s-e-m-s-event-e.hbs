<h3 class="ui header">{{t "forms.i-i-s-e-m-s-event-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form" style = "margin-top: 5%;">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.name
      class=(if (v-get validationModel "name" "isInvalid") "error")
      label=(t "forms.i-i-s-e-m-s-event-e.name-caption")
      data-test-i-i-s-e-m-s-event-e-name=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "name" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-e-m-s-event-e.eventStartDate-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.eventStartDate
      class=(if (v-get validationModel "eventStartDate" "isInvalid") "error")
      data-test-i-i-s-e-m-s-event-e-eventStartDate=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "eventStartDate" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-e-m-s-event-e.eventEndDate-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.eventEndDate
      class=(if (v-get validationModel "eventEndDate" "isInvalid") "error")
      data-test-i-i-s-e-m-s-event-e-eventEndDate=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "eventEndDate" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.place
      class=(if (v-get validationModel "place" "isInvalid") "error")
      label=(t "forms.i-i-s-e-m-s-event-e.place-caption")
      data-test-i-i-s-e-m-s-event-e-place=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "place" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.maxNumberOfParticipants
      class=(if (v-get validationModel "maxNumberOfParticipants" "isInvalid") "error")
      label=(t "forms.i-i-s-e-m-s-event-e.maxNumberOfParticipants-caption")
      data-test-i-i-s-e-m-s-event-e-maxNumberOfParticipants=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "maxNumberOfParticipants" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.ticketPrice
      class=(if (v-get validationModel "ticketPrice" "isInvalid") "error")
      label=(t "forms.i-i-s-e-m-s-event-e.ticketPrice-caption")
      data-test-i-i-s-e-m-s-event-e-ticketPrice=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "ticketPrice" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-e-m-s-event-e.organizer-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.organizer
      displayAttributeName="name"
      autocomplete=true
      relationName="organizer"
      projection="OrganizerL"
      title=(t "forms.i-i-s-e-m-s-event-e.organizer-caption")
      readonly=readonly
      componentName="organizerLookup"
      class=(if (v-get validationModel "organizer" "isInvalid") "error")
      data-test-i-i-s-e-m-s-event-e-organizer=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "organizer" "message")}}
  </div>
</form>
